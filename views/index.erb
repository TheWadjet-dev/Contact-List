<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>World Clock</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 20px;
    }
    .clock {
      margin: 10px;
      font-size: 24px;
      padding: 10px;
      display: inline-block;
      width: 200px;
      border: 2px solid #ccc;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <h1>World Clock</h1>
  <div id="clocks">
    <!-- Los relojes para cada zona horaria se cargarán aquí -->
  </div>

  <script>
    const zones = [
      'America/New_York',
      'Europe/London',
      'Asia/Tokyo',
      'Australia/Sydney',
      'Africa/Johannesburg',
      'Europe/Paris'
    ];

    function fetchTime(zone) {
      fetch(`/time/${zone}`)
        .then(response => response.json())
        .then(data => {
          document.getElementById(zone).innerText = `${zone}: ${data}`;
        })
        .catch(error => console.error('Error fetching time:', error));
    }

    function createClock(zone) {
      const clockDiv = document.createElement('div');
      clockDiv.id = zone;
      clockDiv.classList.add('clock');
      clockDiv.innerText = `${zone}: Loading...`;
      document.getElementById('clocks').appendChild(clockDiv);
      fetchTime(zone);
    }

    // Crear relojes para cada zona horaria
    zones.forEach(zone => createClock(zone));

    // Actualizar la hora cada 30 segundos
    setInterval(() => {
      zones.forEach(zone => fetchTime(zone));
    }, 30000);
  </script>
</body>
</html>
